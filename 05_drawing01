float x = 0, y = 0;
float stepSize = 15.0; //5
float moduleSize = 100; // prima era a 25 perciò cambia la dimensione della forma

//PShape lineModule; è stato disattivato in quanto ho definito una forma nel draw

void setup() {

  size(800,800);
  background(255);
  smooth();
  x = mouseX;
  y = mouseY;
  cursor(CROSS);
 // lineModule = loadShape("01.svg"); è stato disattivato in quanto ho definito una forma nel draw


}

void draw() {
  if (mousePressed) {
    float d = dist(x,y, mouseX,mouseY);

    if (d > stepSize) {
      float angle = atan2(mouseY-y, mouseX-x); 

      pushMatrix();
      translate(mouseX, mouseY);
      rotate(angle+PI);
      fill (random (250), random (100) , random (150), 100); // volevo che ogni cerchio cambiasse colore e trasparenza
      ellipse (50, 50, d, moduleSize); // shape(lineModule, 0, 0, d, moduleSize); è stato sostituito dalla forma ellisse
      popMatrix();

      x = x + cos(angle) * stepSize;
      y = y + sin(angle) * stepSize;
    }
  }
}

void mousePressed() {
  x = mouseX;
  y = mouseY;
}
